{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/notifications/morning",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/notifications/evening",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/notifications/streak",
      "schedule": "0 20 * * *"
    }
  ]
}
